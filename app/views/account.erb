<h1>Welcome, <span style="color:green"><%= @user.username %>!</h1></span>


<p style="display:none">We are currently working on your account.</p>

<p>Current Balance: <span style="color:green"><%= @user.balance %></span></p>
<form action="/deposit" method="post">
<p>Deposit: <input type="text" name="deposit_amount" id="deposit_amount" />
<input type="submit" name="submit" id="submit" /></p>
</form>
<form action="/withdrawal" method="post">
<p>Withdraw: <input type="text" name="withdrawal_amount" id="withdrawal_amount" />
<input type="submit" name="submit" id="submit" /></p>
</form>

<p><a href="/logout">Log Out</a></p>

<% if @error %>
<p style="color: red"><%= @error %></p>
<% end %>