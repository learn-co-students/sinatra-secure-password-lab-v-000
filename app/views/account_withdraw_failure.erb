
<% if logged_in? %>

  <h1>Welcome <%=current_user.username%></h1>
  <h3>Your Balance: <%=current_user.balance.to_s%></h3>

  <p style="color: red"> You do not have enough money in your account. Please enter a valid withdrawal amount.</p>

  <form action="/deposit" method="post">
    <input id="hidden" type="hidden" name="_method" value="patch">
    Enter a Deposit Amount: <input type="text" name="deposit_amount" placeholder="amount">
    <input type="submit" value="Submit">
  </form>

  <form action="/withdraw" method="post">
    <input id="hidden" type="hidden" name="_method" value="patch">
    Enter a Withdrawal Amount: <input type="text" name="withdraw_amount" placeholder="amount">
    <input type="submit" value="Submit">
  </form>

  <a href="/logout">Log Out</a>

<% else %>

  <p>You are not currently logged in.</p>
  <a href="/">Click here to go to the homepage and log in.</a>

<% end %>
